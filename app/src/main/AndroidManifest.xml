<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.VIBRATE" />


    <application
        android:name=".ui.notification.NotificationChannel"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ImagePicker"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".ui.service.MusicService" />

        <receiver
            android:name=".presenter.receiver.MusicReceiver"
            android:exported="true">
            <!-- Define the broadcast actions that this receiver can handle -->
            <intent-filter>
                <action android:name="com.example.app.ACTION_PLAY" />
                <action android:name="com.example.app.ACTION_PAUSE" />
                <action android:name="com.example.myapp.UPDATE_BUTTON_STATE" />
                <!-- Add other action declarations as needed -->
            </intent-filter>
        </receiver>

    </application>

</manifest>